<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:columnCount="9"
    android:stretchMode="columnWidth">

    <!-- Monday and Thursday (odd) -->

    <TextView
        style="@style/schedule_textview"
        android:text="Monday &amp;\nThursday"
        android:textStyle="bold"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_columnSpan="3"
        />

    <TextView
        style="@style/schedule_textview"
        android:text="Period 1\n8:15 - 9:45"
        android:layout_rowSpan="2"
        android:layout_columnSpan="3"
        android:layout_row="1"
        android:layout_column="0"
        />

    <TextView
        style="@style/schedule_textview"
        android:text="Advisory\n9:50 - 10:10"
        android:layout_rowSpan="1"
        android:layout_columnSpan="3"
        android:layout_row="3"
        android:layout_column="0"
        />

    <TextView
        style="@style/schedule_textview"
        android:text="Period 3\n10:15 - 11:45"
        android:layout_rowSpan="2"
        android:layout_columnSpan="3"
        android:layout_row="4"
        android:layout_column="0"
        />

    <TextView
        style="@style/schedule_textview"
        android:text="Lunch\n11:50\n-12:20"
        android:layout_rowSpan="2"
        android:layout_columnSpan="1"
        android:layout_row="6"
        android:layout_column="0"/>

    <TextView
        style="@style/schedule_textview"
        android:text="Period 5\n11:50 -\n12:50"
        android:layout_rowSpan="2"
        android:layout_columnSpan="1"
        android:layout_row="6"
        android:layout_column="1"/>

    <TextView
        style="@style/schedule_textview"
        android:text="Period 5\n11:50 -\n1:20"
        android:layout_rowSpan="3"
        android:layout_columnSpan="1"
        android:layout_row="6"
        android:layout_column="2"/>

    <TextView
        style="@style/schedule_textview"
        android:text="Period 5\n12:20 -\n1:50"
        android:layout_rowSpan="2"
        android:layout_columnSpan="1"
        android:layout_row="8"
        android:layout_column="0"/>

    <TextView
        style="@style/schedule_textview"
        android:text="Lunch\n12:50-1:20"
        android:layout_columnSpan="1"
        android:layout_row="8"
        android:layout_column="1"/>

    <TextView
        style="@style/schedule_textview"

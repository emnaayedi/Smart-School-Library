        android:text="Silver\nLunch\n12:00-\n12:25"
        android:layout_columnSpan="1"
        android:layout_row="7"
        android:layout_column="8"/>

    <TextView
        style="@style/schedule_textview"
        android:text="Period 5\n12:30 - 1:10"
        android:layout_columnSpan="3"
        android:layout_row="8"
        android:layout_column="6"/>

    <TextView
        style="@style/schedule_textview"
        android:text="Period 6\n1:15 - 1:55"
        android:layout_columnSpan="3"
        android:layout_row="9"
        android:layout_column="6"/>

    <TextView
        style="@style/schedule_textview"
        android:text="Period 7\n2:00 - 2:40"
        android:layout_columnSpan="3"
        android:layout_row="10"
        android:layout_column="6"/>

    <TextView
        style="@style/schedule_textview"
        android:text="Period 8\n2:45 - 3:25"
        android:layout_columnSpan="3"
        android:layout_row="11"
        android:layout_column="6"/>


<?xml version="1.0" encoding="utf-8"?>
<androidx.recyclerview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="16dp">

    <LinearLayout xmlns:custom="http://schemas.android.com/apk/res/com.slensky.focussis"
        android:id="@+id/ll_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_contact_title"
                style="@style/primarySubheadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="4dp" />

            <com.slensky.focussis.views.IconWithTextView
                android:id="@+id/view_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:hint="@string/address_contact_name_hint"
                custom:icon="@drawable/ic_person_black_24px" />

        </LinearLayout>


        <com.slensky.focussis.views.IconWithTextView
            android:id="@+id/view_relationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:hint="@string/address_contact_relationship_hint"
            custom:icon="@drawable/ic_account_multiple_black_24px" />

        <com.slensky.focussis.views.IconWithTextView
            android:id="@+id/view_custody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:hint="@string/address_contact_custody_hint"
            custom:icon="@drawable/ic_gavel_black_24px" />

        <com.slensky.focussis.views.IconWithTextView
            android:id="@+id/view_emergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:hint="@string/address_contact_emergency_hint"
            custom:icon="@drawable/ic_warning_black_24px" />

        <com.slensky.focussis.views.IconWithTextView
            android:id="@+id/view_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:hint="@string/address_contact_address_hint"
            custom:icon="@drawable/ic_home_black_24px" />

        <com.slensky.focussis.views.IconWithTextView
            android:id="@+id/view_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:hint="@string/address_phone_hint"
            custom:icon="@drawable/ic_phone_black_24px" />

        <com.slensky.focussis.views.IconWithTextView
            android:id="@+id/view_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:hint="@string/address_contact_email_hint"
            custom:icon="@drawable/ic_email_black_24px" />

        <com.slensky.focussis.views.IconWithTextView
            android:id="@+id/view_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:hint="@string/address_contact_details_hint"
            custom:icon="@drawable/ic_information_outline_black_24px" />

    </LinearLayout>

</androidx.recyclerview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="9"
    android:stretchMode="columnWidth">

    <!-- Monday and Thursday (odd) -->

    <TextView
        style="@style/schedule_textview"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_columnWeight="1"
        android:text="Monday &amp;\nThursday"
        android:textStyle="bold" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="Period 1\n10:15 - 11:20" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="Advisory\n11:25 - 11:35" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:text="Lunch\n11:40\n-12:00" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:text="Period 5\n11:40 -\n12:00" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="4"
        android:layout_rowSpan="3"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:text="Period 5\n11:40 -\n12:45" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:text="Period 5\n12:00 -\n1:05" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:text="Lunch\n12:00-12:20" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:text="Period 5\n12:20 - 1:05" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="7"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:text="Lunch\n12:45 - 1:05" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="8"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="Period 3\n1:10 - 2:15" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="10"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="Period 7\n2:20 - 3:25" />

    <!-- Tuesday and Friday (even) -->

    <TextView
        style="@style/schedule_textview"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_columnSpan="3"
        android:layout_columnWeight="1"
        android:text="Tuesday &amp;\nFriday"
        android:textStyle="bold" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:layout_column="3"
        android:layout_columnSpan="3"
        android:text="Period 2\n10:15 - 11:20" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:layout_column="3"
        android:layout_columnSpan="3"
        android:text="Advisory\n11:25 - 11:35" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:text="Lunch\n11:40\n-12:00" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:layout_column="4"
        android:layout_columnSpan="1"
        android:text="Period 6\n11:40 -\n12:00" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="4"
        android:layout_rowSpan="3"
        android:layout_column="5"
        android:layout_columnSpan="1"
        android:text="Period 6\n11:40 -\n12:45" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:text="Period 6\n12:00 -\n1:05" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="6"
        android:layout_column="4"
        android:layout_columnSpan="1"
        android:text="Lunch\n12:00-12:20" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="7"
        android:layout_column="4"
        android:layout_columnSpan="1"
        android:text="Period 6\n12:20 - 1:05" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="7"
        android:layout_column="5"
        android:layout_columnSpan="1"
        android:text="Lunch\n12:45 - 1:05" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="8"
        android:layout_rowSpan="2"
        android:layout_column="3"
        android:layout_columnSpan="3"
        android:text="Period 4\n1:10 - 2:15" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="10"
        android:layout_rowSpan="2"
        android:layout_column="3"
        android:layout_columnSpan="3"
        android:text="Period 8\n2:20 - 3:25" />

    <!-- Wednesday (all) -->

    <TextView
        style="@style/schedule_textview"
        android:layout_row="0"
        android:layout_column="6"
        android:layout_columnSpan="3"
        android:layout_columnWeight="1"
        android:gravity="center_horizontal|bottom"
        android:text="Wednesday"
        android:textStyle="bold" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="1"
        android:layout_column="6"
        android:layout_columnSpan="3"
        android:text="Period 1\n10:15 - 10:40" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="2"
        android:layout_column="6"
        android:layout_columnSpan="3"
        android:text="Period 2\n10:45 - 11:10" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="3"
        android:layout_column="6"
        android:layout_columnSpan="3"
        android:text="Period 3\n11:15 - 11:40" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="4"
        android:layout_column="6"
        android:layout_columnSpan="3"
        android:text="Period 4\n11:45 - 12:10" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="5"
        android:layout_column="6"
        android:layout_columnSpan="1"
        android:text="Blue Lunch\n12:15-\n12:40" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="5"
        android:layout_column="7"
        android:layout_columnSpan="1"
        android:text="Gold\nAdvisory\n12:15 - 12:40" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="5"
        android:layout_rowSpan="2"
        android:layout_column="8"
        android:layout_columnSpan="1"
        android:text="Silver\nAdvisory\n12:15-\n1:05" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:layout_column="6"
        android:layout_columnSpan="1"
        android:text="Blue\nAdvisory\n12:40-\n1:30" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="6"
        android:layout_column="7"
        android:layout_columnSpan="1"
        android:text="Gold Lunch\n12:40 - 1:05" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="7"
        android:layout_column="7"
        android:layout_columnSpan="1"
        android:text="Gold\nAdvisory\n1:05 - 1:30" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="7"
        android:layout_column="8"
        android:layout_columnSpan="1"
        android:text="Silver\nLunch\n1:05-\n1:30" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="8"
        android:layout_column="6"
        android:layout_columnSpan="3"
        android:text="Period 5\n1:30 - 1:55" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="9"
        android:layout_column="6"
        android:layout_columnSpan="3"
        android:text="Period 6\n2:00 - 2:25" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="10"
        android:layout_column="6"
        android:layout_columnSpan="3"
        android:text="Period 7\n2:30 - 2:55" />

    <TextView
        style="@style/schedule_textview"
        android:layout_row="11"
        android:layout_column="6"
        android:layout_columnSpan="3"
        android:text="Period 8\n3:00 - 3:25" />

</GridLayout>
